{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": ["warn"],
        "linebreak-style": 0,
        "no-underscore-dangle": "off",
        "import/prefer-default-export": "off",
        "no-trailing-spaces": ["warn", {
            "ignoreComments": true
        }]
    }
}
